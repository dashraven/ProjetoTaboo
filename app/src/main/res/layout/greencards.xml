<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:id="@+id/quinzepalavras"
        android:layout_gravity="center_horizontal"
        android:text="15 Palavras"
        android:paddingTop="75dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="75sp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavra1"
        android:layout_gravity="left|center_vertical"
        android:text="Palavra 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/quinzepalavras"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavra2"
        android:layout_gravity="left|center_vertical"
        android:text="Palavra 2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/palavra1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavra3"
        android:layout_gravity="left|center_vertical"
        android:text="Palavra 3"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/palavra2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>