<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dashraven.projetotaboo.Rules">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Existem 2 equipas,que jogam de forma alternada."
        android:id="@+id/rulesView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="10dp"
        android:paddingTop="35dp"
        android:paddingBottom="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="O jogo contem 4 cartas de diferentes cores:"
        android:id="@+id/rulesView2"
        android:layout_below="@+id/rulesView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/rulesView1"
        android:layout_alignEnd="@+id/rulesView1"
        android:paddingTop="25dp"
        android:paddingBottom="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carta Vermelha - Um elemento da equipa tem ajudar o(s) restante(s) elemento(s) a adivinhar a palavra secreta sem mencionar nenhumas das 5 palavras proibidas,tendo 1 minuto para o efeito;"
        android:id="@+id/rulesView3"
        android:layout_below="@+id/rulesView2"
        android:paddingTop="25dp"
        android:paddingBottom="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carta Verde -  Um elemento da equipa tem de usar no máximo 15 palavras diferentes para o(s) restante(s) elemento(s) adivinhem 3 palavras diferentes,tendo 2 minutos para o efeito;"
        android:id="@+id/rulesView4"
        android:layout_below="@+id/rulesView3"
        android:paddingTop="25dp"
        android:paddingBottom="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carta Azul - Um elemento da equipa tem de recorrer à mímica de forma a que o(s) outro(s) adivinhe(m) as 3 expressões/acções ,tendo 1 minuto para o fazer;"
        android:id="@+id/rulesView5"
        android:layout_below="@+id/rulesView4"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_alignRight="@+id/rulesView6"
        android:layout_alignEnd="@+id/rulesView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carta Amarela - Um elemento da equipa tem desenhar de forma a que o(s) outro(s) adivinhe(m) as as palavras ou acções, tendo 2 minutos para o efeito."
        android:id="@+id/rulesView6"
        android:layout_below="@+id/rulesView5"
        android:paddingTop="25dp"
        android:paddingBottom="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cada resposta certa atribui um ponto. Vence a equipa que chegar primeiro aos 50 pontos."

        android:id="@+id/rulesView7"
        android:layout_below="@+id/rulesView6"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_alignRight="@+id/rulesView6"
        android:layout_alignEnd="@+id/rulesView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homeButton"
        android:id="@+id/homeBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
