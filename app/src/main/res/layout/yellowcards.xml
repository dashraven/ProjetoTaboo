<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/yellow" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:id="@+id/desenhar"
        android:layout_gravity="center_horizontal"
        android:text="Desenhar"
        android:paddingTop="75dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="75sp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desenho1"
        android:layout_gravity="left|center_vertical"
        android:text="Desenho 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/desenhar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desenho2"
        android:layout_gravity="center"
        android:text="Desenho 2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/desenho1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desenho3"
        android:layout_gravity="right|center_vertical"
        android:text="Desenho 3"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/desenho2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>
</RelativeLayout>