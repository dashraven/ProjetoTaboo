<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/redcard"
        android:background="@drawable/red" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:id="@+id/palavrasecreta"
        android:layout_gravity="center_horizontal"
        android:text="Palavra Secreta"
        android:paddingTop="75dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="75sp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavraproibida1"
        android:layout_gravity="left|center_vertical"
        android:text="Palavra Proibida 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/palavrasecreta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavraproibida2"
        android:layout_gravity="center"
        android:text="Palavra Proibida 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/palavraproibida1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavraproibida3"
        android:layout_gravity="right|center_vertical"
        android:text="Palavra Proibida 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/palavraproibida2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavraproibida4"
        android:layout_gravity="right|center_vertical"
        android:text="Palavra Proibida 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/palavraproibida3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/palavraproibida5"
        android:layout_gravity="right|center_vertical"
        android:text="Palavra Proibida 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/palavraproibida4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>